<h1>My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item"><%= link_to task.title, task_path(task.id), class: 'text-decoration-none text-black' %>
    ••<%= link_to "🗑️",
              task_path(task.id),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
    </li>
  <% end %>
</ul>

